#include <iostream>
using namespace std;

class Student {
public:
    string name;
    char section;
    int rollno;
    float marks;
    
    // Default Constructor
    Student() {
        name = "";
        section = ' ';
        rollno = 0;
        marks = 0.0;
    }
    
    // Parameterized Constructor
    Student(string n, char s, int r, float m) {
        name = n;
        section = s;
        rollno = r;
        marks = m;
    }
    
    // Parameterized Constructor with different order
    Student(int r, char s, float m, string n) {
        name = n;
        section = s;
        rollno = r;
        marks = m;
    }
    
    // Function to display student information
    void print() {
        cout << "Name: " << name 
             << " | Section: " << section 
             << " | Roll No: " << rollno 
             << " | Marks: " << marks << endl;
    }
};

int main() {
    // Creating student using parameterized constructor
    Student s1("ALEX", 'B', 5, 9.8);
    
    // Creating student using default constructor and setting values
    Student s2;
    s2.name = "LUNA";
    s2.section = 'A';
    s2.rollno = 26;
    s2.marks = 8.5;
    
    // Creating student using constructor with different parameter order
    Student s3(20, 'C', 6.7, "RACHEL");
    
    // Copy constructor (deep copy)
    Student s4 = s2;
    s4.name = "ROSS";
    s4.rollno = 27;
    
    // Display all students
    cout << "\n--- Student Information ---\n" << endl;
    s1.print();
    s2.print();
    s3.print();
    s4.print();
    
    return 0;
}
